@{
    ViewData["Title"] = "Setup";
}
<div class="ml15 mr15 mt10 mb100">
    <div class="row">
        <div class="col-md-9">
            <div class="col-md-3">
                <h2>New Size</h2>

            </div>
            <div class="col-md-5 mt10">
                
                <div class="form-group mt10">
                    <div class="input-group ">
                        <span class="input-group-addon bgred">Descriptive Name</span>
                        <input class="text form-control "/>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mt10">
                
                <div class="form-group mt10">
                    <div class="input-group ">
                        <span class="input-group-addon bgred">Gender</span>
                        <select class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mt10">
                <div class="form-group mt10">
                    <div class="input-group ">
                        <span class="input-group-addon bgred">Size Type</span>
                        <select class="form-control">
                            <option>USA</option>
                            <option>UK</option>
                        </select>
                    </div>
                </div>
            </div>
            </div>
        <div class="col-md-3">

            <a class="btn btn-danger btn-lg pull-right mt15 " asp-area="" asp-controller="Size" asp-action="Index"><i class="fa fa-home "></i> Cancel</a>
            <a class="btn btn-success btn-lg  mt15 pull-right mr10 " asp-area="" asp-controller="Size" asp-action="Edit"><i class="fa fa-save"></i> Save</a>
           
        </div>

    </div>
    <hr />
    <div class="row">


        <form>
            <div class="row ml10 ">

                <div class="col-md-3">

                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">1. Height</span>
                            <input class="text form-control " />
                        </div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">2. Neck Depth Front</span>

                            <input class="text form-control " />
                        </div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">2A. Neck Depth Back</span>

                            <input class="text form-control " />
                        </div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">3. Shoulders</span>

                            <input class="text form-control " />
                        </div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">4. Shoulders to Waist</span>

                            <label class="text form-control "></label>
                        </div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
                            <span class="input-group-addon bgblue">4A. Shoulders to Knee</span>

                            <input class="text form-control " />
                            <span class="text-danger ml10 mt10 h5">Top Length- As Per Required</span>
</div>
                    </div>
                    <div class="form-group mt10">
                        <div class="input-group ">
